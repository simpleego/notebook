```java
// Bookstore.java
import java.util.ArrayList;

public class Bookstore {
    private ArrayList<Book> books = new ArrayList<>();

    public void addBook(Book book) {
        books.add(book);
    }

    public void listBooks() {
        System.out.println("ğŸ“š ì„œì ì— ìˆëŠ” ë„ì„œ ëª©ë¡:");
        for (Book book : books) {
            book.showInfo();
        }
    }

    public Book findBook(String title) {
        for (Book book : books) {
            if (book.getTitle().equalsIgnoreCase(title)) {
                return book;
            }
        }
        System.out.println("í•´ë‹¹ ë„ì„œë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤: " + title);
        return null;
    }

    public void sellBook(String title, Customer customer) {
        Book book = findBook(title);
        if (book != null) {
            customer.buyBook(book);
        }
    }
}
```

```java
// Main.java (ì‹¤í–‰ ì˜ˆì‹œ)
public class Main {
    public static void main(String[] args) {
        Bookstore bookstore = new Bookstore();
        bookstore.addBook(new Book("ìë°”ì˜ ì •ì„", "ë‚¨ê¶ì„±", 35000));
        bookstore.addBook(new Book("Effective Java", "Joshua Bloch", 45000));

        Customer customer = new Customer("í™ê¸¸ë™", 40000);

        bookstore.listBooks();
